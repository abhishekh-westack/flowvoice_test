# Base URL for the application
BASE_URL=https://app.dev.getflowvoice.com/en

# Playwright Browser Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0

# Google Cloud Storage (Optional - for uploading test artifacts)
# Uses Application Default Credentials (ADC)
# Setup: gcloud auth application-default login
# Leave GCS_BUCKET_NAME empty to disable GCS upload
GCS_BUCKET_NAME=
GCS_PROJECT_ID=

# Delete local files after uploading to GCS (saves disk space)
# Set to false to keep both local and cloud copies
DELETE_LOCAL_AFTER_GCS_UPLOAD=true

# Artifacts directories (local storage)
ARTIFACTS_DIR=artifacts
